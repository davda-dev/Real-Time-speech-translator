# Deepgram API Configuration
# Get your API key from: https://console.deepgram.com/
VITE_DEEPGRAM_API_KEY=your_deepgram_api_key_here

# MyMemory Translation API Configuration
VITE_MYMEMORY_API_ENDPOINT=https://api.mymemory.translated.net/get

# Application Configuration
VITE_APP_TITLE=Real-Time Speech Translator
VITE_DEFAULT_SOURCE_LANGUAGE=en
VITE_DEFAULT_TARGET_LANGUAGE=es

# Development Configuration
VITE_DEV_PORT=3001
VITE_DEV_HOST=localhost

# Performance Settings
VITE_TRANSLATION_CACHE_SIZE=1000
VITE_AUDIO_BUFFER_SIZE=4096
VITE_WEBSOCKET_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_TAB_AUDIO=true
VITE_ENABLE_CONFIDENCE_DISPLAY=true
VITE_ENABLE_DEBUG_MODE=false